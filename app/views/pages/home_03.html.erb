<%# Home Page Variation 03
  Section order: Navbar (left-aligned links) > Hero (centered with demo) >
  Features (stacked alternating) > Stats (with graph) > Brands (cards multi-column) >
  Testimonial (two-column with large photo) > CTA (simple) > Footer (links + social)

  Template source: pages/home-03.tsx
%>

<%# ===== Navbar ===== %>
<%= render "shared/marketing/navbar_left_links",
  links: [
    { label: "How it works", href: "#features" },
    { label: "Pricing", href: "#pricing" },
    { label: "About", href: "#" },
  ] %>

<%# ===== Hero (centered with demo) ===== %>
<%= render "shared/marketing/hero_centered_demo",
  eyebrow: render("shared/marketing/announcement_badge",
    href: "#",
    text: "Now with natural-sounding HD voices",
    cta: "Try it free"),
  headline: "Your reading list, in your ears.",
  subheadline: '<p>PodRead turns articles, text, and files into podcast episodes. Listen in your favorite podcast app while you commute, run, cook, or do anything else.</p>'.html_safe,
  cta: render("shared/marketing/install_command", snippet: "No credit card \u00b7 2 free episodes/month \u00b7 Works with any podcast app"),
  demo: render(layout: "shared/marketing/screenshot", locals: { wallpaper: "blue", placement: "bottom" }) {
    '<img src="https://placehold.co/3440x1990" alt="" class="dark:hidden" width="3440" height="1990" />
     <img src="https://placehold.co/3440x1990" alt="" class="not-dark:hidden" width="3440" height="1990" />'.html_safe
  },
  footer: '<div class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4">
    <img src="https://placehold.co/51x32" alt="" width="51" height="32" />
    <img src="https://placehold.co/70x32" alt="" width="70" height="32" />
    <img src="https://placehold.co/100x32" alt="" width="100" height="32" />
    <img src="https://placehold.co/85x32" alt="" width="85" height="32" />
    <img src="https://placehold.co/75x32" alt="" width="75" height="32" />
    <img src="https://placehold.co/85x32" alt="" width="85" height="32" />
  </div>'.html_safe %>

<%# ===== Features (stacked alternating with demos) ===== %>
<%= render layout: "shared/marketing/features_alternating", locals: {
  id: "features",
  headline: "From article to audio in three steps.",
  subheadline: "Paste a link, let PodRead extract and convert, then listen in your podcast app. That's it."
} do %>
  <%= render layout: "shared/marketing/features_alternating_card", locals: {
    headline: "Paste a URL or drop in text",
    subheadline: "Share any article link, paste text directly, or upload a markdown file. PodRead extracts the content and strips away the noise.",
    cta_text: "Try it free",
    cta_href: "#"
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "blue", placement: "bottom-right" } do %>
      <img src="https://placehold.co/1500x1240" alt="" width="1500" height="1240" />
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_alternating_card", locals: {
    headline: "Natural-sounding voices read it aloud",
    subheadline: "PodRead uses the latest HD text-to-speech voices. No robot monotone. Just clear, pleasant audio you can listen to for hours.",
    cta_text: "Hear a sample",
    cta_href: "#"
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "purple", placement: "top-left" } do %>
      <img src="https://placehold.co/1500x1240" alt="" width="1500" height="1240" />
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_alternating_card", locals: {
    headline: "Listen in your favorite podcast app",
    subheadline: "Episodes appear in your private podcast feed. Open Apple Podcasts, Spotify, Overcast, or any podcast app and hit play. No new app to install.",
    cta_text: "Create my feed",
    cta_href: "#"
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "brown", placement: "bottom-left" } do %>
      <img src="https://placehold.co/1500x1240" alt="" width="1500" height="1240" />
    <% end %>
  <% end %>
<% end %>

<%# ===== Brands (cards multi-column) ===== %>
<%= render layout: "shared/marketing/brands_cards", locals: {
  id: "brands",
  eyebrow: "Works everywhere",
  headline: "Listen in the app you already use.",
  subheadline: "PodRead delivers episodes to a standard podcast RSS feed. That means it works with every major podcast app out of the box."
} do %>
  <%= render layout: "shared/marketing/brands_cards_item", locals: {
    text: "Subscribe to your PodRead feed in Apple Podcasts and episodes appear automatically alongside your other shows.",
    footnote: "Apple Podcasts, Overcast, Castro, and more."
  } do %>
    <img src="https://placehold.co/124x32" class="dark:hidden" alt="" width="124" height="32" />
    <img src="https://placehold.co/124x32" class="not-dark:hidden" alt="" width="124" height="32" />
  <% end %>

  <%= render layout: "shared/marketing/brands_cards_item", locals: {
    text: "Add your private feed URL in Spotify and listen to your converted articles right next to your favorite podcasts.",
    footnote: "Spotify, Pocket Casts, Podcast Addict, and more."
  } do %>
    <img src="https://placehold.co/146x32" class="dark:hidden" alt="" width="146" height="32" />
    <img src="https://placehold.co/146x32" class="not-dark:hidden" alt="" width="146" height="32" />
  <% end %>

  <%= render layout: "shared/marketing/brands_cards_item", locals: {
    text: "Use the browser extension to send articles to your feed with one click, right from any page you're reading.",
    footnote: "Chrome, Firefox, and other browsers."
  } do %>
    <img src="https://placehold.co/106x32" class="dark:hidden" alt="" width="106" height="32" />
    <img src="https://placehold.co/106x32" class="not-dark:hidden" alt="" width="106" height="32" />
  <% end %>
<% end %>

<%# ===== Testimonial (two-column with large photo) ===== %>
<%= render "shared/marketing/testimonial_two_col_photo",
  quote: '<p>I built PodRead for myself. I had dozens of articles open in browser tabs that I never made time to read. Now I listen to them during my commute. I hope you find it as useful as I do.</p>'.html_safe,
  name: "Jesse Spevack",
  byline: "Founder of PodRead",
  img_src: "https://placehold.co/1400x1000" %>

<%# ===== Stats (with graph) ===== %>
<%= render layout: "shared/marketing/stats_graph", locals: {
  eyebrow: "Growing every day",
  headline: "Thousands of articles turned into podcast episodes.",
  subheadline: "PodRead helps people listen to the articles they save but never get around to reading. Every day, more people are turning their reading lists into listening lists."
} do %>
  <%= render "shared/marketing/stat_border", stat: "50,000+", text: "Episodes created by readers who'd rather listen." %>
  <%= render "shared/marketing/stat_border", stat: "99.9%", text: "Uptime â€” your feed is always ready when you are." %>
<% end %>

