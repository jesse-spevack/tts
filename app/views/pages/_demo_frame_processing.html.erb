<%# Frame 3: Processing with spinner and progress bar %>

<%= render "shared/demo_browser_frame" do %>
  <div class="space-y-4 py-2 w-full">
    <%# Spinner and status %>
    <div class="flex items-center justify-center gap-2">
      <svg class="w-5 h-5 text-mist-950 dark:text-white animate-spinner" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="text-sm text-mist-950 dark:text-white">Converting...</span>
    </div>

    <%# Progress bar %>
    <div class="relative h-2 rounded-full bg-mist-200 dark:bg-mist-700 overflow-hidden">
      <div class="absolute inset-y-0 left-0 bg-mist-950 dark:bg-white rounded-full animate-progress"></div>
    </div>

    <p class="text-center text-xs text-mist-500 dark:text-mist-400">Your podcast episode will be ready in a few minutes.</p>
  </div>
<% end %>
