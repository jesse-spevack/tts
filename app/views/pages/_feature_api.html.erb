<%# Feature illustration: API terminal %>
<div class="rounded-xl bg-mist-50 dark:bg-mist-950 shadow-lg font-mono text-sm">
  <%# Traffic light dots %>
  <div class="flex items-center gap-1.5 px-4 pt-3 pb-2">
    <span class="inline-block h-2.5 w-2.5 rounded-full bg-red-400"></span>
    <span class="inline-block h-2.5 w-2.5 rounded-full bg-yellow-400"></span>
    <span class="inline-block h-2.5 w-2.5 rounded-full bg-green-400"></span>
  </div>

  <%# Command %>
  <div class="px-4 pb-3">
    <p>
      <span class="text-mist-400">$</span>
      <span class="text-mist-950 dark:text-white"> curl </span>
      <span class="text-mist-400">-X POST</span>
      <span class="text-green-700 dark:text-green-400"> https://api.podread.app/v1/episodes</span>
      <span class="text-mist-400"> \</span>
    </p>
    <p class="pl-4">
      <span class="text-mist-400">-H</span>
      <span class="text-green-700 dark:text-green-400"> "Authorization: Bearer sk_..."</span>
      <span class="text-mist-400"> \</span>
    </p>
    <p class="pl-4">
      <span class="text-mist-400">-d</span>
      <span class="text-green-700 dark:text-green-400"> '{"url": "https://example.com/article"}'</span>
    </p>
  </div>

  <div class="mx-4 border-t border-mist-200 dark:border-mist-800"></div>

  <%# JSON response %>
  <div class="px-4 pt-3 pb-4">
    <p><span class="text-mist-950 dark:text-white">{</span></p>
    <p class="pl-4">
      <span class="text-mist-500 dark:text-mist-400">"status"</span><span class="text-mist-950 dark:text-white">: </span><span class="text-green-700 dark:text-green-400">"processing"</span><span class="text-mist-950 dark:text-white">,</span>
    </p>
    <p class="pl-4">
      <span class="text-mist-500 dark:text-mist-400">"episode_id"</span><span class="text-mist-950 dark:text-white">: </span><span class="text-green-700 dark:text-green-400">"ep_abc123"</span>
    </p>
    <p><span class="text-mist-950 dark:text-white">}</span></p>
  </div>
</div>
