<%# Home Page — Based on Variation 02
  Section order: Navbar (centered links) > Hero (demo on background, wallpaper blue) >
  Features (3-col with demos) > Stats (with graph) > Testimonial (large quote) >
  FAQs (2-col accordion) > Pricing (multi-tier) > CTA (simple) > Footer (link categories)
%>

<%# ===== Navbar ===== %>
<%= render "shared/marketing/navbar_centered_links",
  links: [
    { label: "How it works", href: "#features" },
    { label: "Pricing", href: "#pricing" },
    { label: "About", href: about_path },
  ],
  actions: ('<a href="' + login_path + '" class="text-sm/7 font-medium text-mist-950 dark:text-white">Login</a>
    <button type="button" data-action="click->signup-modal#open" data-plan="free" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full bg-mist-950 px-4 py-1.5 text-sm/7 font-medium text-white hover:bg-mist-800 dark:bg-white dark:text-mist-950 dark:hover:bg-mist-200">Get started</button>').html_safe %>

<%# ===== Hero (demo on background) ===== %>
<%= render "shared/marketing/hero_demo_bg",
  eyebrow: render("shared/marketing/announcement_badge",
    tag: "button",
    text: "Now with natural-sounding HD voices",
    cta: "Hear how it sounds",
    variant: "overlay",
    data: { action: "click->sample-modal#open" }),
  headline: "Turn any article into a podcast episode.",
  subheadline: '<p>Paste a URL, upload a file, or drop in text. PodRead converts it to audio and delivers it to your private podcast feed. Listen in any podcast app.</p>'.html_safe,
  cta: '<button type="button" data-action="click->signup-modal#open" data-plan="free" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-white text-mist-950 hover:bg-mist-200">Create my feed</button>'.html_safe,
  demo: render("pages/hero_demo"),
  wallpaper_color: "blue" %>

<%# ===== Features (5 ways) ===== %>
<%= render layout: "shared/marketing/features_three_col_demos", locals: {
  id: "features",
  headline: "Every way to turn words into audio.",
  subheadline: "However you find articles worth reading, PodRead has a way to get them into your ears."
} do %>
  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Paste a URL",
    subheadline: "Drop in a link to any article. PodRead extracts the content, skips the clutter, and turns it into a podcast episode."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "blue", placement: "bottom-right" } do %>
      <%= render "pages/feature_url" %>
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Paste text",
    subheadline: "Copy and paste any text directly. Great for paywalled articles, PDFs, or anything you've already got on your clipboard."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "purple", placement: "top-left" } do %>
      <%= render "pages/feature_paste" %>
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Upload a file",
    subheadline: "Upload a .txt or .md file and PodRead turns it into an episode. Perfect for notes, drafts, or long-form content."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "brown", placement: "bottom-left" } do %>
      <%= render "pages/feature_upload" %>
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Email to podcast",
    subheadline: "Forward any article or newsletter to your PodRead email address and it shows up as an episode in your feed."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "green", placement: "bottom-right" } do %>
      <%= render "pages/feature_email" %>
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Browser extension",
    subheadline: "One click from any article you're reading. The browser extension sends it straight to your podcast feed.",
    badge: "Coming soon"
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "orange", placement: "top-left" } do %>
      <%= render "pages/feature_extension" %>
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "API",
    subheadline: "Build text-to-speech into your own workflows. Send content programmatically and get episodes delivered to any feed.",
    badge: "Coming soon"
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "brown", placement: "bottom-left" } do %>
      <%= render "pages/feature_api" %>
    <% end %>
  <% end %>
<% end %>

<%# ===== Stats (with graph) ===== %>
<%= render layout: "shared/marketing/stats_graph", locals: {
  eyebrow: "Growing every day",
  headline: "Hundreds of articles turned into podcast episodes.",
  subheadline: "PodRead helps people listen to the articles they save but never get around to reading. Every day, more people are turning their reading lists into listening lists."
} do %>
  <%= render "shared/marketing/stat_border", stat: number_with_delimiter(@episode_count), text: "Episodes created by readers who'd rather listen." %>
  <%= render "shared/marketing/stat_border", stat: number_with_delimiter(@user_count), text: "Listeners who turned their reading list into a playlist." %>
<% end %>

<%# ===== Testimonial (large quote) ===== %>
<%= render "shared/marketing/testimonial_large_quote",
  quote: '<p>I built PodRead because I had dozens of articles open in browser tabs that I never made time to read. Now I listen to them when I\'m doing chores or on a run. I use it every day to stay informed and productive.</p>'.html_safe,
  name: "Jesse Spevack",
  byline: "Founder of PodRead",
  img_src: "/jesse-profile.jpg" %>

<%# ===== FAQs (2-column accordion) ===== %>
<%= render layout: "shared/marketing/faqs_two_col_accordion", locals: {
  id: "faqs",
  headline: "Questions & Answers"
} do %>
  <%= render "shared/marketing/faq_item",
    id: "faq-1",
    question: "Is it really free?",
    answer: "Yes. You get 2 episodes per month on the free plan, no credit card required. If you want unlimited episodes, you can upgrade to Premium for $9/month." %>
  <%= render "shared/marketing/faq_item",
    id: "faq-2",
    question: "Does it sound robotic?",
    answer: "Not at all. PodRead uses the latest text-to-speech technology. All our voice options sound natural and pleasant to listen to, even for long articles. <button type='button' data-action='click->sample-modal#open' class='font-medium text-mist-950 underline hover:text-mist-700 dark:text-white dark:hover:text-mist-300'>Hear how it sounds</button>.".html_safe %>
  <%= render "shared/marketing/faq_item",
    id: "faq-3",
    question: "Which podcast apps work with PodRead?",
    answer: "Any podcast app that supports custom RSS feeds. That includes Apple Podcasts, Spotify, Overcast, Pocket Casts, Castro, and many more. You don't need to install any new apps." %>
  <%= render "shared/marketing/faq_item",
    id: "faq-4",
    question: "What content can I convert?",
    answer: "Web articles (via URL), pasted text, and uploaded markdown files. If you can read it, PodRead can turn it into audio." %>
<% end %>

<%# ===== Pricing (multi-tier with toggle) ===== %>
<%= render layout: "shared/marketing/pricing_hero_multi", locals: {
  id: "pricing",
  headline: "Simple, honest pricing.",
  subheadline: "",
  options: ["Monthly", "Yearly"]
} do %>
  <%# Monthly panel %>
  <div class="grid grid-cols-1 gap-2 lg:auto-cols-fr lg:grid-flow-col lg:grid-cols-none">
    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Free",
      price: "$0",
      period: "/month",
      subheadline: "Try it out, no credit card required.",
      features: [
        "Private podcast feed",
        "Paste links, text, or upload files",
        "Choose your voice",
        "2 episodes per month",
        "Up to 15,000 characters",
      ],
      cta_html: '<button type="button" data-action="click->signup-modal#open" data-plan="free" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950/5 text-mist-950 hover:bg-mist-950/10 dark:bg-white/10 dark:text-white dark:hover:bg-white/15">Create my feed</button>'.html_safe %>

    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Premium",
      price: "$9",
      period: "/month",
      subheadline: "For serious readers and listeners.",
      badge: "Most popular",
      features: [
        "Everything in Free, plus:",
        "Unlimited episodes",
        "Up to 50,000 characters",
      ],
      cta_html: '<button type="button" data-action="click->signup-modal#open" data-plan="premium_monthly" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950 text-white hover:bg-mist-800 dark:bg-white dark:text-mist-950 dark:hover:bg-mist-200">Get Premium</button>'.html_safe %>

    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Credit Pack",
      price: AppConfig::Credits::PACK_PRICE_DISPLAY,
      period: "/ #{AppConfig::Credits::PACK_SIZE} episodes",
      subheadline: "Pay as you go — no subscription required.",
      features: [
        "Same features as Premium, per episode:",
        "Up to 50,000 characters",
        "No subscription needed",
        "Credits never expire",
      ],
      cta_html: '<button type="button" data-action="click->signup-modal#open" data-plan="credit_pack" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950/5 text-mist-950 hover:bg-mist-950/10 dark:bg-white/10 dark:text-white dark:hover:bg-white/15">Buy Credits</button>'.html_safe %>
  </div>

  <%# Yearly panel %>
  <div class="grid grid-cols-1 gap-2 lg:auto-cols-fr lg:grid-flow-col lg:grid-cols-none">
    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Free",
      price: "$0",
      period: "/month",
      subheadline: "Try it out, no credit card required.",
      features: [
        "Private podcast feed",
        "Paste links, text, or upload files",
        "Choose your voice",
        "2 episodes per month",
        "Up to 15,000 characters",
      ],
      cta_html: '<button type="button" data-action="click->signup-modal#open" data-plan="free" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950/5 text-mist-950 hover:bg-mist-950/10 dark:bg-white/10 dark:text-white dark:hover:bg-white/15">Create my feed</button>'.html_safe %>

    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Premium",
      price: "$89",
      period: "/year",
      subheadline: "For serious readers and listeners.",
      badge: "Most popular",
      features: [
        "Everything in Free, plus:",
        "Unlimited episodes",
        "Up to 50,000 characters",
      ],
      cta_html: '<button type="button" data-action="click->signup-modal#open" data-plan="premium_annual" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950 text-white hover:bg-mist-800 dark:bg-white dark:text-mist-950 dark:hover:bg-mist-200">Get Premium</button>'.html_safe %>

    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Credit Pack",
      price: AppConfig::Credits::PACK_PRICE_DISPLAY,
      period: "/ #{AppConfig::Credits::PACK_SIZE} episodes",
      subheadline: "Pay as you go — no subscription required.",
      features: [
        "Same features as Premium, per episode:",
        "Up to 50,000 characters",
        "No subscription needed",
        "Credits never expire",
      ],
      cta_html: '<button type="button" data-action="click->signup-modal#open" data-plan="credit_pack" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950/5 text-mist-950 hover:bg-mist-950/10 dark:bg-white/10 dark:text-white dark:hover:bg-white/15">Buy Credits</button>'.html_safe %>
  </div>
<% end %>

