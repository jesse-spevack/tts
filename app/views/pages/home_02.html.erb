<%# Home Page Variation 02
  Section order: Navbar (centered links) > Hero (demo on background, wallpaper blue) >
  Features (3-col with demos) > Stats (with graph) > Testimonial (large quote) >
  FAQs (2-col accordion) > Pricing (multi-tier) > CTA (simple) > Footer (link categories)

  Template source: pages/home-02.tsx
%>

<%# ===== Navbar ===== %>
<%= render "shared/marketing/navbar_centered_links",
  links: [
    { label: "How it works", href: "#features" },
    { label: "Pricing", href: "#pricing" },
    { label: "About", href: "#" },
  ] %>

<%# ===== Hero (demo on background) ===== %>
<%= render "shared/marketing/hero_demo_bg",
  eyebrow: render("shared/marketing/announcement_badge",
    href: "#",
    text: "Now with natural-sounding HD voices",
    cta: "Try it free",
    variant: "overlay"),
  headline: "Turn any article into a podcast episode.",
  subheadline: '<p>Paste a URL, upload a file, or drop in text. PodRead converts it to audio and delivers it to your private podcast feed. Listen in any podcast app.</p>'.html_safe,
  cta: render("shared/marketing/email_signup_form",
    variant: "overlay",
    cta: "Create my feed"),
  demo: '<img class="bg-white/75 max-lg:hidden" src="https://placehold.co/3440x1500" alt="" width="3440" height="1500" />
         <img class="bg-white/75 max-md:hidden lg:hidden" src="https://placehold.co/3440x1500" alt="" width="3440" height="1500" />
         <img class="bg-white/75 md:hidden" src="https://placehold.co/3440x1500" alt="" width="3440" height="1500" />'.html_safe,
  wallpaper_color: "blue",
  footer: '<div class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4">
    <img src="https://placehold.co/51x32" alt="" width="51" height="32" />
    <img src="https://placehold.co/70x32" alt="" width="70" height="32" />
    <img src="https://placehold.co/100x32" alt="" width="100" height="32" />
    <img src="https://placehold.co/85x32" alt="" width="85" height="32" />
    <img src="https://placehold.co/75x32" alt="" width="75" height="32" />
    <img src="https://placehold.co/85x32" alt="" width="85" height="32" />
  </div>'.html_safe %>

<%# ===== Features (3-column with demos) ===== %>
<%= render layout: "shared/marketing/features_three_col_demos", locals: {
  id: "features",
  headline: "Three ways to turn words into audio.",
  subheadline: "However you find articles worth reading, PodRead has a way to get them into your ears."
} do %>
  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Paste a URL",
    subheadline: "Drop in a link to any article. PodRead extracts the content, skips the clutter, and turns it into a podcast episode."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "blue", placement: "bottom-right" } do %>
      <img src="https://placehold.co/1200x736" alt="" width="1200" height="736" />
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Browser extension",
    subheadline: "One click from any article you're reading. The browser extension sends it straight to your podcast feed."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "purple", placement: "top-left" } do %>
      <img src="https://placehold.co/1200x736" alt="" width="1200" height="736" />
    <% end %>
  <% end %>

  <%= render layout: "shared/marketing/features_three_col_demos_card", locals: {
    headline: "Email to podcast",
    subheadline: "Forward any article or newsletter to your PodRead email address and it shows up as an episode in your feed."
  } do %>
    <%= render layout: "shared/marketing/screenshot", locals: { wallpaper: "brown", placement: "bottom-left" } do %>
      <img src="https://placehold.co/1200x736" alt="" width="1200" height="736" />
    <% end %>
  <% end %>
<% end %>

<%# ===== Stats (with graph) ===== %>
<%= render layout: "shared/marketing/stats_graph", locals: {
  eyebrow: "Growing every day",
  headline: "Thousands of articles turned into podcast episodes.",
  subheadline: "PodRead helps people listen to the articles they save but never get around to reading. Every day, more people are turning their reading lists into listening lists."
} do %>
  <%= render "shared/marketing/stat_border", stat: "50,000+", text: "Episodes created by readers who'd rather listen." %>
  <%= render "shared/marketing/stat_border", stat: "99.9%", text: "Uptime â€” your feed is always ready when you are." %>
<% end %>

<%# ===== Testimonial (large quote) ===== %>
<%= render "shared/marketing/testimonial_large_quote",
  quote: '<p>I built PodRead for myself. I had dozens of articles open in browser tabs that I never made time to read. Now I listen to them on my commute. It took me a weekend to build the first version, and I\'ve been using it every day since.</p>'.html_safe,
  name: "Jesse Spevack",
  byline: "Founder of PodRead",
  img_src: "https://placehold.co/100x100" %>

<%# ===== FAQs (2-column accordion) ===== %>
<%= render layout: "shared/marketing/faqs_two_col_accordion", locals: {
  headline: "Questions & Answers"
} do %>
  <%= render "shared/marketing/faq_item",
    id: "faq-1",
    question: "Is it really free?",
    answer: "Yes. You get 2 episodes per month on the free plan, no credit card required. If you want unlimited episodes and premium HD voices, you can upgrade to Premium for $7.99/month." %>
  <%= render "shared/marketing/faq_item",
    id: "faq-2",
    question: "Does it sound robotic?",
    answer: "Not at all. PodRead uses Google Cloud's latest text-to-speech with Chirp HD voices. They sound natural and pleasant to listen to, even for long articles." %>
  <%= render "shared/marketing/faq_item",
    id: "faq-3",
    question: "Which podcast apps work with PodRead?",
    answer: "Any podcast app that supports custom RSS feeds. That includes Apple Podcasts, Spotify, Overcast, Pocket Casts, Castro, and many more. You don't need to install any new apps." %>
  <%= render "shared/marketing/faq_item",
    id: "faq-4",
    question: "What content can I convert?",
    answer: "Web articles (via URL), pasted text, and uploaded markdown files. If you can read it, PodRead can turn it into audio." %>
<% end %>

<%# ===== Pricing (multi-tier) ===== %>
<%= render layout: "shared/marketing/pricing_multi", locals: {
  id: "pricing",
  headline: "Simple, honest pricing."
} do %>
  <%= render "shared/marketing/pricing_hero_multi_plan",
    name: "Free",
    price: "$0",
    period: "/mo",
    subheadline: "Try it out, no commitment needed",
    features: [
      "2 episodes per month",
      "Standard voices",
      "Private podcast feed",
      "Works with any podcast app",
      "Paste URLs or text",
    ],
    cta_text: "Start listening free",
    cta_href: "#",
    cta_style: "soft" %>

  <%= render "shared/marketing/pricing_hero_multi_plan",
    name: "Premium",
    price: "$7.99",
    period: "/mo",
    subheadline: "For people who listen to everything",
    badge: "Most popular",
    features: [
      "Unlimited episodes",
      "Premium HD voices",
      "Browser extension",
      "Email-to-podcast",
      "Priority processing",
      "Upload markdown files",
      "All free features included",
    ],
    cta_text: "Start listening free",
    cta_href: "#",
    cta_style: "primary" %>

  <%= render "shared/marketing/pricing_hero_multi_plan",
    name: "Premium Yearly",
    price: "$79.99",
    period: "/yr",
    subheadline: "Save 17% with annual billing",
    features: [
      "Everything in Premium",
      "Billed annually",
      "Best value",
    ],
    cta_text: "Start listening free",
    cta_href: "#",
    cta_style: "soft" %>
<% end %>

