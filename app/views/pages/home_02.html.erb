  subheadline: '<p>Start converting articles into podcast episodes today. Free to try, no credit card required.</p>'.html_safe,
  cta: '<div class="flex items-center gap-4">
    <a href="#" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium px-5 py-2.5 bg-mist-950 text-white hover:bg-mist-800 dark:bg-white dark:text-mist-950 dark:hover:bg-mist-200">Start listening free</a>
