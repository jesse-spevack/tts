<%# Pricing 01 - Multi-tier pricing with tabs, plan comparison, testimonial, FAQ, CTA
  Navbar: centered logo | Footer: newsletter + categories + social
  Template source: pages/pricing-01.tsx
%>

<%# ===== Navbar (centered logo) ===== %>
<%= render "shared/marketing/navbar_centered_logo",
  links: [
    { label: "How it works", href: "#" },
    { label: "Pricing", href: "#pricing" },
    { label: "About", href: "#" },
  ] %>

<%# ===== Pricing Hero (tabbed monthly/yearly) ===== %>
<%= render layout: "shared/marketing/pricing_hero_multi", locals: {
  id: "pricing",
  headline: "Pricing",
  subheadline: '<p>Start free and upgrade when you\'re ready. No credit card required. No tricks.</p>'.html_safe,
  options: ["Monthly", "Yearly"]
} do %>
  <%# Monthly panel %>
  <%= render "shared/marketing/pricing_hero_multi_panel" do %>
    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Free",
      price: "$0",
      period: "/month",
      subheadline: "Try it out, no commitment needed",
      features: [
        "2 episodes per month",
        "Standard voices",
        "Private podcast feed",
        "Works with any podcast app",
        "Paste URLs or text"
      ],
      cta_text: "Start listening free",
      cta_href: "#",
      cta_style: "soft" %>
    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Premium",
      price: "$7.99",
      period: "/month",
      subheadline: "For people who listen to everything",
      badge: "Most popular",
      features: [
        "Unlimited episodes",
        "Premium HD voices",
        "Browser extension",
        "Email-to-podcast",
        "Priority processing",
        "Upload markdown files",
        "All free features included"
      ],
      cta_text: "Start listening free",
      cta_href: "#",
      cta_style: "primary" %>
  <% end %>
  <%# Yearly panel %>
  <%= render "shared/marketing/pricing_hero_multi_panel" do %>
    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Free",
      price: "$0",
      period: "/year",
      subheadline: "Try it out, no commitment needed",
      features: [
        "2 episodes per month",
        "Standard voices",
        "Private podcast feed",
        "Works with any podcast app",
        "Paste URLs or text"
      ],
      cta_text: "Start listening free",
      cta_href: "#",
      cta_style: "soft" %>
    <%= render "shared/marketing/pricing_hero_multi_plan",
      name: "Premium",
      price: "$79.99",
      period: "/year",
      subheadline: "Save 17% with annual billing",
      badge: "Best value",
      features: [
        "Unlimited episodes",
        "Premium HD voices",
        "Browser extension",
        "Email-to-podcast",
        "Priority processing",
        "Upload markdown files",
        "All free features included"
      ],
      cta_text: "Start listening free",
      cta_href: "#",
      cta_style: "primary" %>
  <% end %>
<% end %>

<%# Plan Comparison Table %>
<%= render "shared/marketing/plan_comparison",
  id: "pricing",
  plans: ["Free", "Premium"],
  features: [
    {
      title: "Content",
      features: [
        { name: "Episodes per month", value: { "Free" => "2", "Premium" => "Unlimited" } },
        { name: "Paste article URLs", value: true },
        { name: "Paste text", value: true },
        { name: "Upload markdown files", value: { "Free" => false, "Premium" => true } },
        { name: "Email-to-podcast", value: { "Free" => false, "Premium" => true } },
        { name: "Browser extension", value: { "Free" => false, "Premium" => true } }
      ]
    },
    {
      title: "Audio Quality",
      features: [
        { name: "Standard voices", value: true },
        { name: "Premium HD voices", value: { "Free" => false, "Premium" => true } },
        { name: "Priority processing", value: { "Free" => false, "Premium" => true } }
      ]
    },
    {
      title: "Feed & Playback",
      features: [
        { name: "Private podcast feed", value: true },
        { name: "Works with Apple Podcasts", value: true },
        { name: "Works with Spotify", value: true },
        { name: "Works with Overcast", value: true },
        { name: "Works with any podcast app", value: true }
      ]
    }
  ] %>

<%# Testimonial %>
<%= render "shared/marketing/testimonial_two_col_photo",
  quote: '<p>I built PodRead for myself. I had dozens of articles open in browser tabs that I never made time to read. Now I listen to them during my commute. I hope you find it as useful as I do.</p>'.html_safe,
  name: "Jesse Spevack",
  byline: "Founder of PodRead",
  img_src: "https://placehold.co/1400x1000" %>

<%# FAQs %>
<%= render layout: "shared/marketing/faqs_accordion", locals: {
  headline: "Questions & Answers"
} do %>
  <%= render "shared/marketing/faq_item", id: "faq-1", question: "Is it really free?", answer: "Yes. You get 2 episodes per month on the free plan, no credit card required. If you want unlimited episodes and premium HD voices, you can upgrade to Premium for $7.99/month or $79.99/year." %>
  <%= render "shared/marketing/faq_item", id: "faq-2", question: "Does it sound robotic?", answer: "Not at all. PodRead uses Google Cloud's latest text-to-speech with Chirp HD voices. They sound natural and pleasant to listen to, even for long articles." %>
  <%= render "shared/marketing/faq_item", id: "faq-3", question: "Which podcast apps work with PodRead?", answer: "Any podcast app that supports custom RSS feeds. That includes Apple Podcasts, Spotify, Overcast, Pocket Casts, Castro, and many more. You don't need to install any new apps." %>
  <%= render "shared/marketing/faq_item", id: "faq-4", question: "How long does conversion take?", answer: "Most articles are ready in just a few minutes. You'll get a notification when your episode is available in your feed." %>
  <%= render "shared/marketing/faq_item", id: "faq-5", question: "What content can I convert?", answer: "Web articles (via URL), pasted text, and uploaded markdown files. If you can read it, PodRead can turn it into audio." %>
  <%= render "shared/marketing/faq_item", id: "faq-6", question: "Is my feed private?", answer: "Yes. Your podcast feed is private and unique to you. Only you can access it." %>
  <%= render "shared/marketing/faq_item", id: "faq-7", question: "Can I use it with Spotify?", answer: "Yes. Spotify supports custom RSS feeds. Just add your PodRead feed URL and your episodes will show up alongside your other podcasts." %>
<% end %>

