<dialog
  data-sample-modal-target="dialog"
  data-action="click->sample-modal#closeOnBackdrop"
  class="fixed inset-0 z-50 m-auto max-w-md rounded-xl bg-mist-100 dark:bg-mist-950 p-6 shadow-xl backdrop:bg-black/50 backdrop:backdrop-blur-sm"
>
  <%# Close button %>
  <button
    type="button"
    data-action="click->sample-modal#close"
    class="absolute right-3 top-3 rounded-full p-1 text-mist-500 hover:text-mist-950 dark:text-mist-400 dark:hover:text-white"
    aria-label="Close"
  >
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
    </svg>
  </button>

  <div class="text-center">
    <%# Speaker / audio icon %>
    <div class="mx-auto flex size-12 items-center justify-center rounded-full bg-mist-950/10 dark:bg-white/10">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-mist-950 dark:text-white">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 0 1 0 12.728M16.463 8.288a5.25 5.25 0 0 1 0 7.424M6.75 8.25l4.72-4.72a.75.75 0 0 1 1.28.53v15.88a.75.75 0 0 1-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.009 9.009 0 0 1 2.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75Z" />
      </svg>
    </div>

    <%# Heading %>
    <h3 class="mt-4 text-xl font-semibold text-mist-950 dark:text-white">
      Hear how it sounds
    </h3>

    <%# Subtext %>
    <p class="mt-2 text-sm text-mist-500 dark:text-mist-400">
      Listen to a sample episode generated by PodRead.
    </p>
  </div>

  <%# Audio player %>
  <div class="mt-6">
    <%= render "shared/audio_player", source: "/sample-standard-d.mp3", label: "Sample audio" %>
  </div>
</dialog>
