<div class="flex justify-center">
  <fieldset aria-label="Payment frequency" class="grid grid-cols-2 gap-x-1 rounded-full p-1 text-center text-sm font-semibold bg-white dark:bg-mist-800">
    <label class="cursor-pointer rounded-full px-4 py-2 text-mist-500 dark:text-mist-400 has-[:checked]:bg-mist-950 has-[:checked]:text-white dark:has-[:checked]:bg-white dark:has-[:checked]:text-mist-950">
      <input type="radio" name="frequency" value="monthly" class="sr-only" data-action="change->pricing-toggle#update" />
      <span>Monthly</span>
    </label>
    <label class="cursor-pointer rounded-full px-4 py-2 text-mist-500 dark:text-mist-400 has-[:checked]:bg-mist-950 has-[:checked]:text-white dark:has-[:checked]:bg-white dark:has-[:checked]:text-mist-950">
      <input type="radio" name="frequency" value="annual" checked class="sr-only" data-action="change->pricing-toggle#update" />
      <span>Annual</span>
    </label>
  </fieldset>
</div>
