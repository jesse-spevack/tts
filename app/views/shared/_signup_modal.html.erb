<dialog
  data-signup-modal-target="dialog"
  data-action="click->signup-modal#closeOnBackdrop"
  class="fixed inset-0 z-50 m-auto max-w-md rounded-xl bg-mist-100 dark:bg-mist-950 p-6 shadow-xl backdrop:bg-black/50 backdrop:backdrop-blur-sm"
>
  <div class="text-center">
    <!-- Envelope Icon -->
    <div class="mx-auto flex size-12 items-center justify-center rounded-full bg-mist-950/10 dark:bg-white/10">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-mist-950 dark:text-white">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
      </svg>
    </div>

    <!-- Heading -->
    <h3 data-signup-modal-target="heading" class="mt-4 text-xl font-semibold text-mist-950 dark:text-white">
      Start listening free
    </h3>

    <!-- Subtext -->
    <p data-signup-modal-target="subtext" class="mt-2 text-sm text-mist-500 dark:text-mist-400">
      2 episodes/month, no credit card required
    </p>
  </div>

  <!-- Form -->
  <%= form_with url: session_path, class: "mt-6" do |form| %>
    <%= form.hidden_field :plan, value: "", data: { signup_modal_target: "planField" } %>

    <div class="space-y-4">
      <%= form.email_field :email_address,
          required: true,
          autocomplete: "email",
          placeholder: "Enter your email",
          class: "w-full rounded-lg bg-white dark:bg-mist-800 px-4 py-3 text-base text-mist-950 dark:text-white outline-none ring-1 ring-mist-200 dark:ring-mist-700 placeholder:text-mist-500 dark:placeholder:text-mist-400 focus:ring-2 focus:ring-mist-950 dark:focus:ring-white" %>

      <%= form.submit "Send me a link",
          class: "w-full rounded-lg bg-mist-950 dark:bg-white px-4 py-3 text-sm font-semibold text-white dark:text-mist-950 shadow-sm hover:bg-mist-800 dark:hover:bg-mist-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-mist-950 dark:focus-visible:outline-white cursor-pointer" %>
    </div>
  <% end %>

  <p class="mt-4 text-center text-xs text-mist-500 dark:text-mist-400">
    By signing up, you agree to our
    <%= link_to "Terms", terms_path, class: "underline hover:text-mist-950 dark:hover:text-white" %>
    and <%= link_to "Privacy Policy", privacy_path, class: "underline hover:text-mist-950 dark:hover:text-white" %>.
  </p>
</dialog>
