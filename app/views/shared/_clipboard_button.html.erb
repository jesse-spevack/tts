<%# locals: (content:, title: "Copy to clipboard", icon: "share", button_class: nil, label: nil) %>
<button type="button"
        data-controller="clipboard"
        data-clipboard-content-value="<%= content %>"
        data-action="click->clipboard#copy"
        class="<%= button_class || "text-[var(--color-subtext)] hover:text-[var(--color-primary)] transition-colors cursor-pointer" %>"
        title="<%= title %>">
  <span data-clipboard-target="copyIcon"><%= render "shared/icons/#{icon}" %></span>
  <span data-clipboard-target="checkIcon" class="hidden text-[var(--color-green)]">
    <%= render "shared/icons/#{icon == "copy" ? "document_check" : "check_circle"}" %>
  </span>
  <% if label %>
    <span><%= label %></span>
  <% end %>
</button>
