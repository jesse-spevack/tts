<header class="sticky top-0 z-10 bg-mist-100 dark:bg-mist-950">
  <nav>
    <div class="mx-auto flex h-[5.25rem] max-w-6xl items-center gap-4 px-6">
      <%# Left: logo + nav links (desktop only) %>
      <div class="flex flex-1 items-center gap-12">
        <div class="flex items-center">
          <%= link_to (authenticated? ? episodes_path : root_path), class: "inline-flex items-stretch" do %>
            <span class="font-display text-xl text-mist-950 dark:text-white">PodRead</span>
          <% end %>
        </div>
        <% if authenticated? %>
          <div class="flex gap-8 max-lg:hidden">
            <%= link_to "Episodes", episodes_path, class: "text-sm/7 font-medium text-mist-950 dark:text-white" %>
            <%= link_to "Settings", settings_path, class: "text-sm/7 font-medium text-mist-950 dark:text-white" %>
            <% if Current.user.free? %>
              <%= link_to "Upgrade", upgrade_path, class: "text-sm/7 font-medium text-mist-950 dark:text-white" %>
            <% else %>
              <%= link_to "Billing", billing_path, class: "text-sm/7 font-medium text-mist-950 dark:text-white" %>
            <% end %>
            <%= link_to "Help", how_it_sounds_path, class: "text-sm/7 font-medium text-mist-950 dark:text-white" %>
            <% if Current.user_admin? %>
              <%= link_to "Analytics", admin_analytics_path, class: "text-sm/7 font-medium text-mist-950 dark:text-white" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Right: actions + mobile menu toggle %>
      <div class="flex flex-1 items-center justify-end gap-4">
        <div class="flex shrink-0 items-center gap-5">
          <% if authenticated? %>
            <%= link_to new_episode_path, class: "inline-flex shrink-0 items-center justify-center gap-1 rounded-full bg-mist-950 px-4 py-1.5 text-sm/7 font-medium text-white hover:bg-mist-800 dark:bg-white dark:text-mist-950 dark:hover:bg-mist-200 max-sm:hidden" do %>
              + New Episode
            <% end %>

            <button
              data-action="click->theme#toggle"
              class="cursor-pointer text-mist-950 hover:opacity-70 dark:text-white"
              title="Toggle dark mode"
            >
              <span data-theme-target="sunIcon" class="hidden">
                <%= render "shared/icons/sun" %>
              </span>
              <span data-theme-target="moonIcon">
                <%= render "shared/icons/moon" %>
              </span>
            </button>

            <span class="text-sm/7 text-mist-500 dark:text-mist-400 max-lg:hidden"><%= Current.user.email_address %></span>

            <%= button_to "Logout", session_path, method: :delete, class: "text-sm/7 font-medium text-mist-950 dark:text-white cursor-pointer max-lg:hidden" %>
          <% end %>
        </div>

        <% if authenticated? %>
          <button
            command="show-modal"
            commandfor="app-mobile-menu"
            aria-label="Toggle menu"
            class="inline-flex rounded-full p-1.5 text-mist-950 hover:bg-mist-950/10 lg:hidden dark:text-white dark:hover:bg-white/10"
          >
            <svg viewBox="0 0 24 24" fill="currentColor" class="size-6">
              <path
                fill-rule="evenodd"
                d="M3.748 8.248a.75.75 0 0 1 .75-.75h15a.75.75 0 0 1 0 1.5h-15a.75.75 0 0 1-.75-.75ZM3.748 15.75a.75.75 0 0 1 .75-.751h15a.75.75 0 0 1 0 1.5h-15a.75.75 0 0 1-.75-.75Z"
                clip-rule="evenodd"
              />
            </svg>
          </button>
        <% end %>
      </div>
    </div>

    <% if authenticated? %>
      <%# Mobile menu dialog %>
      <el-dialog class="lg:hidden">
        <dialog id="app-mobile-menu" class="backdrop:bg-transparent">
          <el-dialog-panel class="fixed inset-0 bg-mist-100 px-6 py-6 dark:bg-mist-950">
            <div class="flex justify-end">
              <button
                command="close"
                commandfor="app-mobile-menu"
                aria-label="Close menu"
                class="inline-flex rounded-full p-1.5 text-mist-950 hover:bg-mist-950/10 dark:text-white dark:hover:bg-white/10"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="size-6"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <div class="mt-6 flex flex-col gap-6">
              <span class="text-sm text-mist-500 dark:text-mist-400"><%= Current.user.email_address %></span>

              <%= link_to "Episodes", episodes_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <%= link_to "+ New Episode", new_episode_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <%= link_to "Settings", settings_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <% if Current.user.free? %>
                <%= link_to "Upgrade", upgrade_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <% else %>
                <%= link_to "Billing", billing_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <% end %>
              <%= link_to "Help", how_it_sounds_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <% if Current.user_admin? %>
                <%= link_to "Analytics", admin_analytics_path, class: "group inline-flex items-center justify-between gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white" %>
              <% end %>

              <button
                data-action="click->theme#toggle"
                class="flex items-center gap-2 text-3xl/10 font-medium text-mist-950 dark:text-white cursor-pointer"
              >
                <span data-theme-target="sunIcon" class="hidden">Light mode</span>
                <span data-theme-target="moonIcon">Dark mode</span>
              </button>

              <%= button_to "Logout", session_path, method: :delete, class: "text-left text-3xl/10 font-medium text-mist-950 dark:text-white cursor-pointer" %>
            </div>
          </el-dialog-panel>
        </dialog>
      </el-dialog>
    <% end %>
  </nav>
</header>
