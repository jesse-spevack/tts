<%# Email signup form with inline input + button %>
<%# Locals: variant (string, "normal" or "overlay", default "normal"), cta (string, button text), label (string, optional), placeholder (string, optional) %>
<% variant = local_assigns[:variant] || "normal" %>
<% label = local_assigns[:label] || "Email address" %>
<% placeholder = local_assigns[:placeholder] || "Enter your email" %>
<% cta_text = local_assigns[:cta] || "Sign up" %>
<form class="flex rounded-full p-1 inset-ring-1 dark:bg-white/10 dark:inset-ring-white/10 <%= variant == 'normal' ? 'bg-white inset-ring-black/10' : 'bg-white/15 inset-ring-white/10' %>">
  <input
    class="min-w-0 flex-1 px-3 text-sm/7 focus:outline-hidden dark:text-white <%= variant == 'normal' ? 'text-mist-950' : 'text-white placeholder:text-white/60' %>"
    type="email"
    aria-label="<%= label %>"
    placeholder="<%= placeholder %>"
  />
  <% if variant == "normal" %>
    <button type="submit" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium bg-mist-950 text-white hover:bg-mist-800 dark:bg-mist-300 dark:text-mist-950 dark:hover:bg-mist-200 px-3 py-1"><%= cta_text %></button>
  <% else %>
    <button type="submit" class="inline-flex shrink-0 items-center justify-center gap-1 rounded-full text-sm/7 font-medium hover bg-white text-mist-950 hover:bg-mist-100 dark:bg-mist-100 dark:hover:bg-white px-3 py-1"><%= cta_text %></button>
  <% end %>
</form>
