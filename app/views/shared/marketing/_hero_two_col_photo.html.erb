<%# Hero Two Column with Photo
  Locals:
    eyebrow    - (optional) string or HTML for the eyebrow text above headline
    headline   - (required) string or HTML for the main heading
    subheadline - (required) string or HTML for the subheading text
    cta        - (optional) HTML for the call-to-action buttons/links
    photo      - (optional) HTML for the photo (typically an <img> tag)
%>
<section class="py-16">
  <div class="mx-auto w-full max-w-2xl px-6 md:max-w-3xl lg:max-w-7xl lg:px-10 flex gap-16 max-xl:flex-col">
    <div class="flex flex-1 flex-col items-start justify-center gap-6">
      <% if local_assigns[:eyebrow] %>
        <%= eyebrow %>
      <% end %>
      <h1 class="font-display text-5xl/12 tracking-tight text-balance sm:text-[5rem]/20 text-mist-950 dark:text-white max-w-5xl">
        <%= headline %>
      </h1>
      <div class="text-lg/8 text-mist-700 dark:text-mist-400 flex max-w-3xl flex-col gap-4">
        <%= subheadline %>
      </div>
      <% if local_assigns[:cta] %>
        <%= cta %>
      <% end %>
    </div>
    <% if local_assigns[:photo] %>
      <div class="flex flex-1 overflow-hidden rounded-xl outline -outline-offset-1 outline-black/5 *:object-cover dark:outline-white/5">
        <%= photo %>
      </div>
    <% end %>
  </div>
</section>
