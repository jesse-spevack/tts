<%# Individual FAQ item with disclosure toggle %>
<%# Locals: id (string, unique ID for this FAQ), question (string), answer (html_safe string) %>
<% faq_id = local_assigns[:id] || "faq-#{SecureRandom.hex(4)}" %>
<div id="<%= faq_id %>">
  <button
    type="button"
    id="<%= faq_id %>-question"
    command="--toggle"
    commandfor="<%= faq_id %>-answer"
    class="flex w-full items-start justify-between gap-6 py-4 text-left text-base/7 text-mist-950 dark:text-white"
  >
    <%= question %>
    <%= render "shared/icons/plus", css_class: "h-lh in-aria-expanded:hidden" %>
    <%= render "shared/icons/minus", css_class: "h-lh not-in-aria-expanded:hidden" %>
  </button>
  <el-disclosure
    id="<%= faq_id %>-answer"
    hidden
    class="-mt-2 flex flex-col gap-2 pr-12 pb-4 text-sm/7 text-mist-700 dark:text-mist-400"
  >
    <%= answer %>
  </el-disclosure>
</div>
