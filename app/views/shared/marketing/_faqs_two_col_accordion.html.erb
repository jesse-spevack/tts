<%# Two-column FAQ accordion (headline left, accordion right) %>
<%# Locals: headline (string, optional), subheadline (string, optional) %>
<%# Pass FAQ items as the block content using _faq_item partial %>
<section class="py-16" <% if local_assigns[:id] %>id="<%= id %>"<% end %>>
  <div class="mx-auto w-full max-w-2xl px-6 md:max-w-3xl lg:max-w-7xl lg:px-10 grid grid-cols-1 gap-x-2 gap-y-8 lg:grid-cols-2">
    <div class="flex flex-col gap-6">
      <% if local_assigns[:headline] %>
        <h2 class="font-display text-[2rem]/10 tracking-tight text-pretty text-mist-950 sm:text-5xl/14 dark:text-white"><%= headline %></h2>
      <% end %>
      <% if local_assigns[:subheadline] %>
        <div class="text-base/7 text-mist-700 dark:text-mist-400 flex flex-col gap-4 text-pretty"><%= subheadline %></div>
      <% end %>
    </div>
    <div class="divide-y divide-mist-950/10 border-y border-mist-950/10 dark:divide-white/10 dark:border-white/10">
      <%= yield %>
    </div>
  </div>
</section>
