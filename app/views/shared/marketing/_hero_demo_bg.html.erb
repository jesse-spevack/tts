<%# Hero with Demo on Background
  Locals:
    eyebrow    - (optional) string or HTML for the eyebrow text above headline
    headline   - (required) string or HTML for the main heading
    subheadline - (required) string or HTML for the subheading text
    cta        - (optional) HTML for the call-to-action buttons/links
    demo       - (optional) HTML for the demo/screenshot area
    footer     - (optional) HTML for the footer area below the hero
    wallpaper_color - (optional) color for the wallpaper background, defaults to "blue"
%>
<section class="flex flex-col gap-16 px-2 pb-16">
  <%= render "shared/marketing/wallpaper", color: local_assigns.fetch(:wallpaper_color, "blue"), extra_class: "rounded-lg" do %>
    <div class="-mx-2 sm:px-6 md:px-12 lg:px-0">
      <div class="mx-auto w-full max-w-2xl px-6 md:max-w-3xl lg:max-w-7xl lg:px-10 flex flex-col gap-16">
        <div class="flex gap-x-10 gap-y-16 max-lg:flex-col sm:gap-y-24">
          <div class="flex shrink-0 flex-col items-start gap-6 pt-16 sm:pt-32 lg:basis-2xl lg:py-40">
            <% if local_assigns[:eyebrow] %>
              <%= eyebrow %>
            <% end %>
            <h1 class="font-display text-5xl/12 tracking-tight text-balance sm:text-[5rem]/20 text-white max-w-5xl">
              <%= headline %>
            </h1>
            <div class="flex max-w-3xl flex-col gap-4 text-lg/8 text-white/70">
              <%= subheadline %>
            </div>
            <% if local_assigns[:cta] %>
              <%= cta %>
            <% end %>
          </div>
          <% if local_assigns[:demo] %>
            <div class="flex flex-1 items-center justify-center py-12 lg:py-24">
              <%= demo %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="mx-auto w-full max-w-2xl px-6 md:max-w-3xl lg:max-w-7xl lg:px-10">
    <% if local_assigns[:footer] %>
      <%= footer %>
    <% end %>
  </div>
</section>
