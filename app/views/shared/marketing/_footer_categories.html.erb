<%#
  Footer with link categories.
  Ported from: components/sections/footer-with-link-categories.tsx

  Locals:
    categories - Array of hashes with :title and :links keys, where :links is an
                 array of { label:, href: } hashes (default: placeholder categories)
    fineprint  - Footer fineprint text (default: copyright notice)
%>

<%
  categories ||= [
    {
      title: "Product",
      links: [
        { label: "Features", href: "#features" },
        { label: "Pricing", href: "#pricing" },
        { label: "Changelog", href: "#" },
      ]
    },
    {
      title: "Company",
      links: [
        { label: "About", href: "#about" },
        { label: "Blog", href: "#" },
        { label: "Careers", href: "#" },
      ]
    },
    {
      title: "Support",
      links: [
        { label: "Help center", href: "#" },
        { label: "Contact", href: "#" },
        { label: "Privacy", href: "#privacy" },
      ]
    },
    {
      title: "Legal",
      links: [
        { label: "Terms", href: "#terms" },
        { label: "Privacy", href: "#privacy" },
        { label: "Cookies", href: "#" },
      ]
    },
  ]
  fineprint ||= "Â© #{Date.today.year} PodRead. All rights reserved."
%>

<footer class="pt-16">
  <div class="bg-mist-950/2.5 py-16 text-mist-950 dark:bg-white/5 dark:text-white">
    <div class="mx-auto w-full max-w-2xl px-6 md:max-w-3xl lg:max-w-7xl lg:px-10 flex flex-col gap-16">
      <%# Link categories %>
      <nav class="grid grid-cols-2 gap-6 text-sm/7 sm:has-[>:last-child:nth-child(3)]:grid-cols-3 sm:has-[>:nth-child(5)]:grid-cols-3 md:has-[>:last-child:nth-child(4)]:grid-cols-4 lg:has-[>:nth-child(5)]:grid-cols-5">
        <% categories.each do |category| %>
          <div>
            <h3><%= category[:title] %></h3>
            <ul role="list" class="mt-2 flex flex-col gap-2">
              <% category[:links].each do |link| %>
                <li class="text-mist-700 dark:text-mist-400">
                  <a href="<%= link[:href] %>"><%= link[:label] %></a>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </nav>

      <%# Fineprint %>
      <div class="text-sm/7 text-mist-600 dark:text-mist-500"><%= fineprint %></div>
    </div>
  </div>
</footer>
