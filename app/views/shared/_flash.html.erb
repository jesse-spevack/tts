      <div class="shrink-0 text-red-600 dark:text-red-400">
        <%= render "shared/icons/x_circle" %>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-red-600 dark:text-red-400"><%= alert %></p>
      </div>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" data-action="click->dismissable#dismiss" class="inline-flex rounded-md p-1.5 text-red-600 dark:text-red-400 hover:bg-red-600/10 dark:hover:bg-red-400/10 focus-visible:ring-2 focus-visible:ring-red-600 dark:focus-visible:ring-red-400 focus-visible:ring-offset-1 focus-visible:outline-hidden">
            <span class="sr-only">Dismiss</span>
            <%= render "shared/icons/x_mark" %>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
