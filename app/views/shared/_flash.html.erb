<% if notice.present? %>
  <div data-controller="auto-dismiss dismissable" class="rounded-md bg-green-600/10 dark:bg-green-400/10 p-4 outline outline-green-600/20 dark:outline-green-400/20 mb-6 transition-opacity duration-300">
    <div class="flex">
      <div class="shrink-0 text-green-600 dark:text-green-400">
        <%= render "shared/icons/check_circle" %>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-600 dark:text-green-400"><%= notice %></p>
      </div>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" data-action="click->dismissable#dismiss" class="inline-flex rounded-md p-1.5 text-green-600 dark:text-green-400 hover:bg-green-600/10 dark:hover:bg-green-400/10 focus-visible:ring-2 focus-visible:ring-green-600 dark:focus-visible:ring-green-400 focus-visible:ring-offset-1 focus-visible:outline-hidden">
            <span class="sr-only">Dismiss</span>
            <%= render "shared/icons/x_mark" %>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if alert.present? %>
