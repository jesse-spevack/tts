<% content_for :title, "Extension Connected" %>

<div class="flex justify-center items-center min-h-[calc(100vh-10rem)]"
     data-controller="extension-connect"
     data-extension-connect-token-value="<%= @api_token.plain_token %>"
     data-tts-token="<%= @api_token.plain_token %>"
     data-tts-connect-status="ready">
  <div class="w-full max-w-md text-center">
    <!-- Success Icon -->
    <div class="mx-auto flex size-12 items-center justify-center rounded-full bg-green-600/10 dark:bg-green-400/10">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-green-600 dark:text-green-400">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
      </svg>
    </div>

    <!-- Heading -->
    <h1 class="mt-4 text-xl font-semibold text-mist-950 dark:text-white">Extension Connected</h1>

    <!-- Status Message -->
    <p data-extension-connect-target="status" class="mt-2 text-sm text-mist-500 dark:text-mist-400">
      Connecting to extension...
    </p>

    <!-- Link back -->
    <p class="mt-6">
      <%= link_to "Return to TTS", root_path, class: "text-sm text-mist-950 dark:text-white hover:underline" %>
    </p>
  </div>
</div>
