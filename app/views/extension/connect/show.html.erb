<% content_for :title, "Connect Extension" %>

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Extension Connected!</h2>
        <p class="text-gray-600 mb-6">Your TTS browser extension is now connected to your account.</p>
      </div>

      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <p class="text-sm text-gray-500 mb-2">Your extension token:</p>
        <code id="token-display" class="block text-xs break-all bg-white p-2 rounded border border-gray-200 text-gray-700">
          <%= @api_token.plain_token %>
        </code>
      </div>

      <p id="status-message" class="text-center text-sm text-gray-600 mb-4">
        Sending token to extension...
      </p>

      <div class="text-center">
        <a href="<%= root_path %>" class="text-indigo-600 hover:text-indigo-500 text-sm font-medium">
          Return to TTS
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    const token = "<%= @api_token.plain_token %>";
    const statusEl = document.getElementById('status-message');

    // Try to communicate with the extension via storage event
    // The extension listens for storage changes
    function notifyExtension() {
      // Method 1: Try to send message directly to extension (if extension ID is known)
      // This requires the extension to declare externally_connectable in manifest

      // Method 2: The extension can poll/watch for this page and read the token
      // We'll set a data attribute the extension's content script can read
      document.body.setAttribute('data-tts-token', token);
      document.body.setAttribute('data-tts-connect-status', 'ready');

      // Dispatch a custom event that the content script can listen for
      window.dispatchEvent(new CustomEvent('tts-extension-token', {
        detail: { token: token }
      }));

      // Update status after a moment
      setTimeout(function() {
        statusEl.textContent = 'Token ready! The extension should now be connected.';
        statusEl.classList.remove('text-gray-600');
        statusEl.classList.add('text-green-600');
      }, 500);
    }

    notifyExtension();
  })();
</script>
