<div class="flex justify-center items-center min-h-[calc(100vh-10rem)]">
  <%= render "shared/card", padding: "p-8" do %>
    <div class="w-full max-w-md">
      <h1 class="text-3xl font-bold mb-2">Turn your reading list into a podcast</h1>
      <p class="text-mist-500 dark:text-mist-400 mb-6">
        For everyone with 47 tabs they'll never read
      </p>

      <div class="mb-10 space-y-4">
        <p class="text-sm text-mist-500 dark:text-mist-400">Hear what it sounds like:</p>
        <div class="space-y-3">
          <div>
            <%= render "shared/audio_player", source: "/sample-chirp3-hd-enceladus.mp3", label: "Premium voice", label_class: "text-xs text-mist-500 dark:text-mist-400 mb-1" %>
          </div>
          <div>
            <%= render "shared/audio_player", source: "/sample-standard-d.mp3", label: "Standard voice", label_class: "text-xs text-mist-500 dark:text-mist-400 mb-1" %>
          </div>
        </div>
      </div>

      <%= form_with url: session_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "Drop your email here",
              class: input_classes %>
        </div>

        <p class="text-sm text-mist-500 dark:text-mist-400">
          We'll send you a magic link. Free tier, no credit card.
        </p>

        <div>
          <%= form.submit "Send Magic Link", class: button_classes(type: :primary, full_width: true) %>
        </div>

        <p class="text-xs text-mist-500 dark:text-mist-400 text-center">
          <%= render "shared/legal_links", prefix: "By signing up, you agree to our", link_class: "underline hover:text-mist-950 dark:hover:text-white" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
