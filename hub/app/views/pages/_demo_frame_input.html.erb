<%# Frame 1: URL being typed into input field %>

<%= render "shared/demo_browser_frame" do %>
  <div class="space-y-3 w-full min-w-64 max-w-64">
    <%# Input field with typing animation %>
    <div class="flex items-center gap-2 rounded-md border border-[var(--color-overlay0)] bg-[var(--color-surface0)] px-3 py-2 overflow-hidden">
      <span class="text-[var(--color-subtext)]">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
      </span>
      <span class="flex-1 inline-flex items-center overflow-hidden">
        <span class="text-sm text-[var(--color-text)] whitespace-nowrap" data-typing-text>example.com/future-of-remote-work</span><span class="text-sm text-[var(--color-primary)] animate-cursor" data-typing-cursor style="display: none;">|</span>
      </span>
    </div>

    <%# Convert button %>
    <button class="w-full rounded-md bg-[var(--color-primary)] px-4 py-2 text-sm font-medium text-[var(--color-primary-text)]">
      Convert
    </button>
  </div>
<% end %>
