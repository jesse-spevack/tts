<div class="flex justify-center items-center min-h-[calc(100vh-10rem)]">
  <%= render "shared/card", padding: "p-8" do %>
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-semibold mb-2">Turn your reading list into a podcast</h1>
      <p class="text-[var(--color-subtext)] mb-8">
        Convert any article to audio. Listen in your favorite podcast app.
      </p>

      <%= form_with url: session_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, "Email", class: label_classes %>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "Drop your email here",
              class: input_classes %>
        </div>

        <p class="text-sm text-[var(--color-subtext)]">
          We'll email you a link to get started. Free tier, no credit card.
        </p>

        <div>
          <%= form.submit "Send Magic Link", class: button_classes(type: :primary, full_width: true) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
